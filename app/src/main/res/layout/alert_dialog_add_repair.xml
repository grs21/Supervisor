<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_background"
    >

    <TextView
        android:id="@+id/textViewRepairDialogBuildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buildName"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/editTextRepairDialogBuildName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/textViewRepairDialogBuildName"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_background"
        android:paddingStart="15dp"
        android:paddingTop="4dp"
        />
    <TextView
        android:id="@+id/textViewRepairDialogNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note:"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewRepairDialogBuildName"
        />

    <EditText
        android:id="@+id/editTextRepairDialogNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextRepairDialogBuildName"
        android:layout_toEndOf="@+id/textViewRepairDialogNote"
        android:background="@drawable/text_background"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:gravity="top"
        android:paddingStart="15dp"
        android:lines="10"


        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRepairDialogSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextRepairDialogNote"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"
        android:text="@string/save"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRepairDialogCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRepairDialogSave"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"
        android:text="@string/cancel"

        />


</RelativeLayout>