<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/orange"
    android:layout_marginTop="3dp"
    >

    <TextView
        android:id="@+id/textViewRepairRecyclerViewItemBuildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:text="@string/buildName"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/textVİewRepairItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRepairRecyclerViewItemBuildName"
        android:text="@string/date"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/textViewRepairRecyclerViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="realDate"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/textVİewRepairItemDate"
        android:layout_below="@+id/textViewRepairRecyclerViewItemBuildName"

        />





</RelativeLayout>